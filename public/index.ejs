<!DOCTYPE html>
<html>
    <head>
        <title>Daniel Koceja's Snake</title>

        <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">

        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script
          src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
          integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
          crossorigin="anonymous"
        ></script>
        <script
          src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
          integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
          crossorigin="anonymous"
        ></script>
        <link
          rel="stylesheet"
          href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
          integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
          crossorigin="anonymous"
        />

        <style>
            body {
                text-align: center;
                font-family: 'Roboto', sans-serif;
                color: black;
                
            }

            #header {
                margin-top: 25px;
                margin-bottom: 25px;
            }
            
            #game-wrapper {
                margin-right: auto;
                width: 400px;
                float: left;
                
                margin-left: 10%;
            }
            #game {
                border: 0.5px solid #6d6d6d;
                box-shadow: 5px 5px 10px black;
                display: block;
            }
            #leaderboard {

                height: auto;
                width: 30%;
                margin-left: 60%;
                margin-right: 10%;
            }

            .list-group-item {
                background-color: #3d454d !important;
            }

            @media screen and (max-width: 845px) {
                #leaderboard {
                    margin: auto;
                    width: 400px;
                    margin-bottom: 50px;
                }

                #game-wrapper {
                    float: none;
                    width: 400px;
                    margin: auto;
                }
            }


        </style>
    </head>
    <body>
        <div id="container">
            <h1 id="header">
                snake
            </h1>
            <div id="wrapper">
                <div id="game-wrapper">
                    <canvas id="game">
    
                    </canvas>
                    <div id="scoreboard">
                        <p></p>
                        <p id="score">size: <span id="size">5</span></p>
                    </div>
                </div>
                <div id="leaderboard">
                    <div class="card text-white bg-dark">
                        <div class="card-header">
                          Highscores
                        </div>
                        <ul class="list-group list-group-flush">
                          
                        </ul>
                    </div>
                </div>
                
                
                
                
            </div>
            
            
            

        </div>
        
        
        <noscript>
            <style type="text/css">
                #container {display:none;}
            </style>
            <div class="noscriptmsg">
                <h1>You don't have javascript enabled. Please enable javascript to play this game.</h1>
            </div>
        </noscript>
    </body>
    <script src='https://unpkg.com/trianglify@^4/dist/trianglify.bundle.js'></script>
    <script>
      const pattern = trianglify({
        width: window.innerWidth,
        height: window.innerHeight,
      })
      var elem = pattern.toCanvas();
      elem.style.cssText = 'position:fixed;top:0px;left:0px;z-index:-100';
      document.body.appendChild(elem);
    </script>
    <script src="game.js">

    </script>
</html>