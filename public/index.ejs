        <style>
            body {
                text-align: center;
                font-family: 'Roboto', sans-serif;
                color: white;
                background:
                radial-gradient(circle at 100% 50%, transparent 20%, rgba(255,255,255,.3) 21%, rgba(255,255,255,.3) 34%, transparent 35%, transparent),
                radial-gradient(circle at 0% 50%, transparent 20%, rgba(255,255,255,.3) 21%, rgba(255,255,255,.3) 34%, transparent 35%, transparent) 0 -50px;
                background-color: rgb(90, 90, 199);
                background-size:75px 100px;
                
            }

            #header {
                margin-top: 25px;
                margin-bottom: 25px;
            }

            #wrapper {
                margin: auto;
                width: 800px;
                box-shadow: 5px 5px 10px black;
            }
            
            #game-wrapper {
                margin-right: auto;
                width: 600px;
                float: left;
                
                margin-left: 0px;
            }
            #game {
                border: 0.5px solid #6d6d6d;
                display: block;
            }
            #leaderboard {
                position: relative;
                height: 602px;
                width: 200px;
                margin-left: 600px;
                margin-right: 0px;
                background-color: #3d454d;
                border: 0.5px solid #6d6d6d;
            }

            .card {
                border: 0px !important;
                
            }

            #scores {
                display: flex;
                -ms-flex-direction: column;
                flex-direction: column;
                list-style-type: none;
                padding: 2px;
                background-color: #3d454d;
            }

            .score-item {
                background-color: #3d454d !important;
                border: 0px !important;
                width: 100%;
                padding-top: 10px;
                padding-bottom: 10px;
            }

            #score {
                position: absolute;
                bottom: 10px;
                width: 100%;
                text-align: center;
            }

        </style>
    </head>
    <body>
        <div id="container">
            <h1 id="header">
                SNAKE
            </h1>
            <div id="wrapper">
                <div id="game-wrapper">
                    <canvas id="game">
    
                    </canvas>
                    <div id="scoreboard">
                        <p></p>
                        
                    </div>
                </div>
                <div id="leaderboard">
                    <div class="text-white bg-dark">
                        <div class="card-header">
                          HIGH-SCORES
                        </div>
                        <ul id="scores">
                          
                        </ul>
                        <p id="score">size: <span id="size">5</span></p>
                    </div>
                </div>
                
                
                
                
            </div>
            
            
            

        </div>
        
        
        <noscript>
            <style type="text/css">
                #container {display:none;}
            </style>
            <div class="noscriptmsg">
                <h1>You don't have javascript enabled. Please enable javascript to play this game.</h1>
            </div>
        </noscript>
    </body>
